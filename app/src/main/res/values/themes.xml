<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ShapeSync" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowBackground">@color/color_default</item>
        <item name="colorPrimaryVariant">@color/color_default</item>

        <item name="colorPrimary">@color/cor_primaria</item>
        <item name="colorPrimaryDark">@color/color_default</item>

    </style>

    <style name="CustonTabLayouyt" parent="Base.Theme.ShapeSync">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="CustonStyleSpinner" parent="Base.Theme.ShapeSync">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="CheckboxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@color/radio_text_selector</item>
        <item name="android:buttonTint">@color/radio_text_selector</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditTextTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:padding">16dp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditTextThemeDescricao" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:padding">5dp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.ShapeSync" parent="Base.Theme.ShapeSync" />

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyleWrapper</item>
    </style>

    <style name="BottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ButtomTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_default</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@null</item>
    </style>
</resources>